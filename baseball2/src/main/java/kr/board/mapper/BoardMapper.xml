<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.board.mapper.BoardMapper">

	<!-- insert 수정 -->
	<insert id="boardInsert" parameterType="BoardVO"> 
		insert into tb_board(title, contents, count, writer) 
		values(#{title},#{contents},#{count},#{writer})
	</insert>

	<delete id="boardDelete" parameterType="Integer">
		delete from tb_board where
		idx=#{idx}
	</delete>

	<select id="boardContent" parameterType="Integer" resultType="BoardVO">
		select * from tb_board
		where idx=#{idx}
		
	</select>

	<update id="boardUpdate" parameterType="BoardVO">
		update tb_board set
		title=#{title}, contents=#{contents}, count=#{count}
		where idx=#{idx}
		
	</update>
</mapper>